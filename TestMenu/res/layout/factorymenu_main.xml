<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/main_layout"
    android:layout_width="1920px"
    android:layout_height="1080px"
    >
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/factory_title"
        android:layout_width="1050px"
   		android:layout_height="90px"
   		android:layout_alignParentLeft="true"
   		android:layout_alignParentTop="true"
   		android:layout_marginLeft="500px"
   		android:layout_marginTop="150px"
   		android:paddingLeft="10px"
   		android:stretchColumns="1,3"
   		android:shrinkColumns="*"
    >
    <TableRow>
	    <TextView  
	    android:text="@string/CPU_VER"
	    android:textSize="32px"
	    android:gravity="right"
	    android:textColor = "#ffffff"
	    
	    />
	   	<TextView  
	    android:id="@+id/CPU_Date"
	    android:text="@string/CPU_VER"
	    android:textSize="32px"
	    android:gravity="left"
	    android:textColor = "#ffffff"
	    
	    />
	   	<TextView  
	    android:text="@string/EEP_VER"
	    android:textSize="32px"
	    android:gravity="right"
	    android:textColor = "#ffffff"
	    
	    />
	   	<TextView  
	    android:id="@+id/EEP_Date"
	    android:text="@string/CPU_VER"
	    android:textSize="32px"
	    android:gravity="left"
	    android:textColor = "#ffffff"
	    
	    />
    </TableRow>
    <TableRow>
	    <TextView  
	    android:text="@string/SOFT_VER"
	    android:textSize="32px"
	    android:gravity="right"
	    android:textColor = "#ffffff"
	    />
	   	<TextView  
	    android:id="@+id/softwareVersion"
	    android:text="@string/CPU_VER"
	    android:textSize="32px"
	    android:gravity="left"
	    android:textColor = "#ffffff"
	    />
	    <TextView  
	    android:text="@string/UBOOT_VER"
	    android:textSize="32px"
	    android:gravity="right"
	    android:textColor = "#ffffff"
	    />
	   	<TextView  
	    android:id="@+id/ubootVersion"
	    android:text="@string/CPU_VER"
	    android:textSize="32px"
	    android:gravity="left"
	    android:textColor = "#ffffff"	
	   	/>    
    </TableRow>
    </TableLayout>

	<ListView android:layout_width="1000px"    
          android:layout_height="800px"    
          android:id="@+id/FactoryMainList" 
          android:layout_below="@id/factory_title"
          android:layout_alignLeft="@id/factory_title"
          android:layout_marginTop="20px"
          android:listSelector="#00000000"
          android:divider="@null" 
          />
