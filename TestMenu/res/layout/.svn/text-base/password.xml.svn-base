<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/password_layout"
	android:padding="20px"
    android:layout_width="600px"
    android:layout_height="350px"
    android:background="#aabbbbbb"
    >
   <TextView  
		android:id="@+id/item_introduce"
		android:text ="@string/enter_password"
	    android:textSize="32px"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_width="600px"
   		android:layout_height="120px"
   		android:focusable="false"
   		android:textColor="#000000"
	    
	/>
 	
	<EditText 
	    android:id="@+id/item_editPart"
	    android:textSize="32px"
	    android:layout_below="@id/item_introduce"
	    android:layout_alignParentLeft="true"
	    android:layout_width="300px"
   		android:layout_height="60px"
		android:focusable="false"
	/>
 	
	<Button
		android:id="@+id/item_backspace"
	    android:textSize="32px"
	    android:text ="@string/backspace"
	    android:layout_alignTop="@id/item_editPart"
	    android:layout_toRightOf="@id/item_editPart"
	   	android:layout_width="100px"
   		android:layout_height="60px"
   		android:nextFocusDown="@+id/item_locknum1"
   		android:nextFocusUp="@+id/item_back"
   		android:focusable="true"
	/>
	
	<LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:id="@+id/item_layout_lock"
		android:layout_width="600px"
   		android:layout_height="60px"
   		android:layout_below="@id/item_editPart"
	    android:layout_alignParentLeft="true"
	>
		<TextView
			
			android:layout_width="150px"
   			android:layout_height="60px"
   			android:text="@string/passwordLock"
   			android:textSize="32px"
   			android:focusable="false"
		/>
		<Button
			android:id="@+id/item_locknum1"
			android:layout_width="60px"
   			android:layout_height="60px"
   			android:text="@string/zero"
   			android:textSize="32px"
   			android:nextFocusDown="@+id/item_back"
   			android:nextFocusLeft="@+id/item_locknum6"
   			android:focusable="true"
		/>
		<Button
			android:id="@+id/item_locknum2"
			android:layout_width="60px"
   			android:layout_height="60px"
   			android:text="@string/zero"
   			android:textSize="32px"
   			android:nextFocusDown="@+id/item_back"
   			android:focusable="true"
		/>
		<Button
			android:id="@+id/item_locknum3"
			android:layout_width="60px"
   			android:layout_height="60px"
   			android:text="@string/zero"
   			android:textSize="32px"
   			android:nextFocusDown="@+id/item_back"
   			android:focusable="true"
		/>
		<Button
			android:id="@+id/item_locknum4"
			android:layout_width="60px"
   			android:layout_height="60px"
   			android:text="@string/zero"
   			android:textSize="32px"
   			android:nextFocusDown="@+id/item_back"
   			android:focusable="true"
		/>
		<Button
			android:id="@+id/item_locknum5"
			android:layout_width="60px"
   			android:layout_height="60px"
   			android:text="@string/zero"
   			android:textSize="32px"
 	    	android:nextFocusDown="@+id/item_back" 
 	    	android:focusable="true" 			
		/>
		<Button
			android:id="@+id/item_locknum6"
			android:layout_width="60px"
   			android:layout_height="60px"
   			android:text="@string/zero"
   			android:textSize="32px"
	    	android:nextFocusDown="@id/item_back"
	    	android:nextFocusRight="@id/item_locknum1"
	    	android:focusable="true"
		/>								
	</LinearLayout>
	
	<Button
		android:id="@+id/item_back"
		android:layout_width="100px"
   		android:layout_height="60px"
   		android:text="@string/back"
   		android:textSize="32px"
   		
   		android:layout_below="@id/item_layout_lock"
	    android:layout_alignParentLeft="true"
	   	android:nextFocusUp="@+id/item_locknum1"
	    android:nextFocusDown="@+id/item_backspace"
	    android:nextFocusLeft="@+id/item_ensure"
	    android:focusable="true"
	/>	
	<Button
		android:id="@+id/item_ensure"
		android:layout_width="100px"
   		android:layout_height="60px"
   		android:text="@string/ensure"
   		android:textSize="32px"
   		android:layout_alignTop="@id/item_back"
	    android:layout_toRightOf="@id/item_back"
	    android:visibility="invisible"
	    android:nextFocusUp="@+id/item_locknum1"
	    android:nextFocusDown="@+id/item_backspace"
	    android:nextFocusRight="@+id/item_back"
	    android:focusable="true"
	/>
<!-- -->
</RelativeLayout>
